<tr>
  <td>
    <%= language_image_tag(exercise.language) %>
  </td>
  <td>
    <%= exercise.submissions_count %>
  </td>
  <td>
    <a class=<%= exercise.solved_by?(current_user) ? 'passed-exercise' : 'pending-exercise' if current_user %> 
    href="<%= exercise_path(exercise) %>"><%= exercise.title %></a>
  </td>
  <td>
    <%= time_ago_in_words(exercise.created_at) %>
  </td>
</tr>